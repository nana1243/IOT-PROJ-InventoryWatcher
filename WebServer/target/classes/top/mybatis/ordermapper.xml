<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="top.mapper.OrderMapper">

	<insert id= "insert" parameterType = "order">
		INSERT INTO ORDERS VALUES(#{orderID}, #{payment}, #{deliveryDate}, #{deliveryState}, #{orderPerson}, #{orderState}, #{hqID}, #{hqName}, #{chainID},#{chainName}, #{userID})
	</insert>
	<select id="select" parameterType="String" resultType="order">
		SELECT * FROM ORDERS WHERE userID=#{userID}
	</select>
	<select id="selectall" resultType="order">
		SELECT * FROM ORDERS
	</select>

</mapper>